@model SearchElements


<br />
<h2 class="text-primary">Добавление рецепта</h2>
<br />


<form form method="post" enctype="multipart/form-data">
    <div class="border row">
        <div class="col-md-8 mt-3">

            <div class="form-group row mb-3">
                <div class="col-md-4">
                    <label class="text-primary font-weight-bold">Название</label>
                </div>
                <div class="col-md-8">
                    <input type="text" class="form-control" id="Name" name="Name">
                </div>
            </div>

            <div class="form-group row mb-3">
                <div class="col-md-4">
                    <label class="text-primary font-weight-bold">Категория</label>
                </div>
                <div class="col-md-8">
                    <select class="form-select form-select-sm" name="CategoryId" id="CategoryId">
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group row mb-3">
                <div class="col-md-4">
                    <label class="text-primary font-weight-bold">Описание</label>
                </div>
                <div class="col-md-8">
                    <textarea id="Description" class="form-control" name="Description"></textarea>
                </div>
            </div>

            <div class="form-group row mb-3">
                <div class="col-md-4">
                    <label class="text-primary font-weight-bold">Время готовки</label>
                </div>
                <div class="col-md-8">
                    <input type="time" class="form-control" id="CookingTime" name="CookingTime">
                </div>
            </div>

            <div class="form-group row mb-3">
                <div class="col-md-4">
                    <label class="text-primary font-weight-bold">Изображение</label>
                </div>
                <div class="col-md-8">
                    <input type="file" class="form-control" id="ImageData" accept=".jpg, .jpeg, .png" name="ImageData" />
                </div>
            </div>


            <div class="form-group row mb-3">
                <div class="col-md-4">
                    <label class="text-primary font-weight-bold">Температура готовки</label>
                </div>
                <div class="col-md-8">
                    <input type="number" class="form-control" id="CookingTemperature" name="CookingTemperature">
                </div>
            </div>


            <div class="form-group row mb-3">
                <div class="col-md-4">
                    <label class="text-primary font-weight-bold">Последовательность действий</label>
                </div>
                <div class="col-md-8">
                    <textarea id="SequenceActions" class="form-control" name="SequenceActions"></textarea>
                </div>
            </div>

            <div class="form-group row mb-3">
                <div class="col-md-4">
                    <label class="text-primary font-weight-bold">Ингредиенты</label>
                </div>
                <div class="col-md-8">
                    <select name="IngredientsId" id="IngredientsId" class="form-control" multiple="multiple">
                        @foreach (var ingredient in Model.Ingredients)
                        {
                            <option value=@ingredient.Id>@ingredient.Name</option>
                        }
                    </select>
                </div>
            </div>



            <div class="form-group row mb-3">
                <div class="col-md-4">

                </div>
                <div class="col-md-4">
                    <a asp-action="GetAllRecipes" class="btn btn-success form-control">Back To List</a>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary form-control">Создать</button>
                </div>
            </div>
        </div>

    </div>
</form>



