@model IEnumerable<Recipe>



        <div class="backgroundWhite">


            <div id="categories" class="menu-filter-list list-inline text-center mb-4">
                @await Component.InvokeAsync("NavigationMenu")
            </div>



            <div class="row">

                <div class="col-12">

                    <div class="row">
                        <h3 class="text-success">Рецепты</h3>
                    </div>

                    @if (Model.Count() == 0)
                    {
                        <h3 class="text-center mt-3">Нет рецептов</h3>
                    }
                    else
                    {
                        @foreach (var recipe in Model)
                        {
                            @await Html.PartialAsync("RecipeSummary", recipe)
                        }
                    }


                </div>
            </div>
        </div>





