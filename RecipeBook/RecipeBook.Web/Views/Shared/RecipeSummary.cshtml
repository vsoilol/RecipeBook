@model Recipe




<section class="border border-info rounded col-12 load-more__item" style="margin-bottom: 10px; margin-top: 10px; padding: 10px;">

    <div class="row">

        <div class="col-md-3 col-sm-12">

            @if (Model.ImageData != null)
            {

<img class="recipeImage"
     src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ImageData)" />}


        </div>

        <div class="col-md-9 col-sm-12">

            <div class="row pr-3">

                <div class="col-8">
                    <label class="text-primary" style="font-size: 21px; color: maroon">@Model.Name</label>
                </div>

            </div>
            @*<h3>
                    <a asp-controller="Recipe" asp-route-id="@Model.Id" asp-action="GetById">@Model.Name</a>
                </h3>*@

            <div class="row col-12 text-justify d-none d-md-block">

                <span class="recipe-directions__list--item">@Model.Description</span>

            </div>

            <div class="col-md-3 col-sm-12 offset-md-9 text-center">
                <a class="btn btn-success form-control" asp-controller="Recipe" asp-route-id="@Model.Id" asp-action="GetById">Подробнее</a>
            </div>

        </div>

    </div>

</section>



