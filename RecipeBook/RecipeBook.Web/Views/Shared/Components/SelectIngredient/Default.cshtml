@model SelectIngredientModel



<select name="IngredientsId" id="IngredientsId" class="form-control" multiple="multiple">
    @foreach (var ingredient in Model.AllIngredients)
    {
        @if (Model.SelectIngredientsId?.Contains(ingredient.Id) ?? false)
        {
            <option value="@ingredient.Id" selected>@ingredient.Name</option>
        }
        else
        {
            <option value="@ingredient.Id">@ingredient.Name</option>
        }

    }
</select>